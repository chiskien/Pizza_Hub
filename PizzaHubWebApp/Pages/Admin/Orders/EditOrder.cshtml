@page "{id}"
@model PizzaHubWebApp.Pages.Admin.Orders.EditOrderModel
@{
    Layout = "Shared/_Layout";
}

<h1 class=" text-center">Edit Order</h1>
<div class="product-wrapper">
    <form method="post" asp-page-handler="Edit" style="height: -webkit-fill-available" enctype="multipart/form-data">
        <div class="form-group">
            <label>ID </label>
            <input type="text" class="form-control" name="id" value="@Model.Order.OrderId" readonly />
        </div>
        <div class="form-group">
            <label>Address </label>
            <input type="text" class="form-control" name="address" value="@Model.Order.Address" />
        </div>
        <div class="form-group">
            <label>Order Date </label>
            <input type="date" class="form-control" name="orderdate" value="@Model.Order.OrderDate.ToString("yyyy-MM-dd")" required />
        </div>
        <div class="form-group">
            <label>Required Date </label>
            <input type="date" class="form-control" name="requireddate" value="@Model.Order.RequiredDate.GetValueOrDefault().ToString("yyyy-MM-dd")"  />
        </div>
        <div class="form-group">
            <label>Shipped Date </label>
            <input type="date" class="form-control" name="shippeddate" value="@Model.Order.ShippedDate.GetValueOrDefault().ToString("yyyy-MM-dd")"  />
        </div>
        <div class="form-group">
            <label for="status">Category</label>
            <select class="form-control" name="status" id="status">
                @foreach (var r in Model.Statuses)
                {
                    <option value="@r.StatusId">@r.Status1</option>
                }
            </select>
        </div>
        <input type="submit" />
    </form>
</div>
<script>
    document.querySelector("#status").value = '@Model.Order.StatusId'
</script>