@page "{id}"
@model PizzaHubWebApp.Pages.Admin.Orders.OrderDetail

@{
    Layout = "Shared/_Layout";
}
<style>
    input::-webkit-outer-spin-button,
    input::-webkit-inner-spin-button {
        -webkit-appearance: none;
        margin: 0;
    }
</style>
<h1 class="text-center">Order Detail</h1>
<div class="product-wrapper" style="height: -webkit-fill-available; padding:50px">
    <form style="height: -webkit-fill-available">
        <div class="form-group">
            <label>ID </label>
            <input type="text" class="form-control" name="id" value="@Model.Order.OrderId" readonly />
        </div>
        <div class="form-group">
            <label>Member </label>
            <input type="text" class="form-control" name="name" value="@Model.Order.Member.Email" readonly />
        </div>
        <div class="form-group">
            <label>Order Date </label>
            @*<input type="date" class="form-control" name="orderdate" value="@Model.Order.OrderDate.ToString("yyyy-MM-dd")" readonly />*@
            <input type="text" class="form-control" name="orderdate" value="@Model.Order.OrderDate.ToString("dd/MM/yyyy")" readonly />
        </div>
        
    </form>
    <form style="height: -webkit-fill-available">
        <div class="form-group">
            <label>Address </label>
            <input type="text" class="form-control" name="address" value="@Model.Order.Address" readonly />
        </div>
        <div class="form-group">
            <label>Status </label>
            <input type="text" class="form-control" name="status" value="@Model.Order.Status.Status1" readonly />
        </div>
        <div class="form-group">
            <label>Freight </label>
            <input type="number" class="form-control" name="status" value="@Model.Order.Freight" readonly />
        </div>
    </form>

    <form style="height: -webkit-fill-available">
        <div class="form-group">
            <label>Required Date </label>
            @*<input type="date" class="form-control" name="requireddate" value="@Model.Order.RequiredDate.Value.ToString("yyyy-MM-dd")" readonly />*@
            <input type="text" class="form-control" name="requireddate" value="@if (Model.Order.RequiredDate.HasValue) { Model.Order.RequiredDate.Value.ToString("dd/MM/yyyy"); } " readonly />
        </div>

        <div class="form-group">
            <label>Shipped Date </label>
            @*<input type="date" class="form-control" name="shippeddate" value="@Model.Order.ShippedDate.Value.ToString("yyyy-MM-dd")" readonly />*@
            <input type="text" class="form-control" name="shippeddate" value="@if (Model.Order.ShippedDate.HasValue) { Model.Order.ShippedDate.Value.ToString("dd/MM/yyyy"); }" readonly />
        </div>
        <div class="form-group">
            <label>Note </label>
            <input type="text" class="form-control" name="note" value="@Model.Order.Note" readonly />
        </div>
    </form>
</div>
<table>
    <tr>
        <th>Product</th>
        <th>Size</th>
        <th>Quantity</th>
        <th>Discount</th>
        <th>Price</th>
    </tr>
    @foreach (var i in Model.OrdersDetail)
    {
        <tr>
            @if (i.Pizza != null)
            {
                <th>@i.Pizza.PizzaName - @i.Base.Base</th>
            }
            else
            {
                <th>@i.Drink.DrinkName</th>
            }

            <th>@i.Size.Size1</th>
            <th>@i.Quantity</th>
            <th>@i.Discount</th>
            <th>@i.TotalPrice</th>
        </tr>
    }
</table>