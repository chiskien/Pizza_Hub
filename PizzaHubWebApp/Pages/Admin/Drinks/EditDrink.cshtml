@page "{id}"
@model PizzaHubWebApp.Pages.Admin.Drinks.EditDrinkModel
@{
    Layout = "Shared/_Layout";
}
<style>
    input::-webkit-outer-spin-button,
    input::-webkit-inner-spin-button {
        -webkit-appearance: none;
        margin: 0;
    }
</style>
<h1 class=" text-center">Edit Drink</h1>
<div class="product-wrapper">
    <form method="post" asp-page-handler="Edit" style="height: -webkit-fill-available" enctype="multipart/form-data">
        <input type="text" name="id" value="@Model.Drink.DrinkId" hidden />
        <div class="form-group">
            <label>Name* </label>
            <input type="text" class="form-control" name="name" value="@Model.Drink.DrinkName" required />
        </div>
        <div class="form-group">
            <label>Brand </label>
            <input type="text" class="form-control" name="brand" value="@Model.Drink.Brand" />
        </div>
        <div class="form-group">
            <label>Price* </label>
            <input type="number" class="form-control" name="price" value="@Model.Drink.Price" required />
        </div>
        <div class="form-group">
            <label>Image </label>
            <input type="file" class="form-control" name="image" />
        </div>
        <input type="submit" />
    </form>
</div>