@page "{id}"
@model PizzaHubWebApp.Pages.Admin.Categories.EditCategory

@{
    Layout = "Shared/_Layout";
}

<!DOCTYPE html>

<html>
<head>
    <title></title>
</head>
<body>
    <h1 class=" text-center">Edit Category</h1>
    <div class="product-wrapper">
        <form method="post" asp-page-handler="Edit" style="height: -webkit-fill-available" enctype="multipart/form-data">
            <input type="text" name="id" value="@Model.Category.CategoryId" hidden />
            <div class="form-group">
                <label>Name* </label>
                <input type="text" class="form-control" name="name" value="@Model.Category.CategoryName" required />
            </div>
            <div class="form-group">
                <label>Image </label>
                <input type="file" class="form-control" name="image" />
            </div>
            <input type="submit" />
        </form>
    </div>
</body>
</html>