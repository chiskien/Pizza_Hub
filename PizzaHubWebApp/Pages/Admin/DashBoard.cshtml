    @foreach (var pizza in Model.Pizzas)
    {
        <div class="products-row">
            <div class="product-cell image">
                <img src="~/Assets/Images/Pizza/@pizza.Image" alt="@pizza.Image">
                <span class="cell-label">Title: </span><b>@pizza.PizzaName</b>
            </div>
            <div class="product-cell cell-id">
                <span class="cell-label">Pizza Id:</span>@pizza.PizzaId
            </div>
            <div class="product-cell category">
                <span class="cell-label">Category:</span>@pizza.Category.CategoryName
            </div>
            <div class="product-cell sauce">
                <span class="cell-label">Sauce:</span>@pizza.Sauce.SauceName
            </div>
            <div class="product-cell sauce">
                <span class="cell-label">Price: </span>@pizza.Price
            </div>
            <div class="product-cell status-cell">
                <span class="cell-label">Status:</span>
                @switch (@pizza.Status.Status1)
                {
                    case "Pending":
                        <span class="status disabled">@pizza.Status.Status1</span>
                        break;
                    case "Out of Stock":
                        <span class="status disabled">@pizza.Status.Status1</span>
                        break;
                    case "Canceled":
                        <span class="status disabled">@pizza.Status.Status1</span>
                        break;
                    case "Approved":
                        <span class="status active">@pizza.Status.Status1</span>
                        break;
                    case "Available":
                        <span class="status active">@pizza.Status.Status1</span>
                        break;
                    case "On Sale":
                        <span class="status active">@pizza.Status.Status1</span>
                        break;
                }
            </div>
            <div class="product-cell">
                <a asp-page="/Admin/Pizzas/EditPizza"
                   asp-route-id="@pizza.PizzaId"
                   class="btn ">
                    Edit
                </a>
                <a href="" class="btn" data-toggle="modal" data-target="#model_@pizza.PizzaId">Delete</a>

                <div class="modal fade" id="model_@pizza.PizzaId" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">Delete</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                Do you want to delete @pizza.PizzaName?
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-dark" data-dismiss="modal">No</button>
                                <form method="post" asp-page-handler="Delete">
                                    <input type="hidden" name="id" value="@pizza.PizzaId"/>
                                    <input type="submit" class="btn btn-primary" value="Yes"/>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    }
</div>