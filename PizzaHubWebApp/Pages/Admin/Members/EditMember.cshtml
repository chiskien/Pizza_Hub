@page "{id}"
@model PizzaHubWebApp.Pages.Admin.Members.EditMember
@{
    Layout = "Shared/_Layout";
}

<!DOCTYPE html>

<html>
<head>
    <title></title>
</head>
<body>
    <style>
        input::-webkit-outer-spin-button,
        input::-webkit-inner-spin-button {
            -webkit-appearance: none;
            margin: 0;
        }
    </style>
    <h1 class=" text-center">Create Member</h1>
    <div class="product-wrapper">
        <form method="post" asp-page-handler="Edit" style="height: -webkit-fill-available" enctype="multipart/form-data">
            <input type="text" name="id" value="@Model.Member.MemberId" hidden />
            <div class="form-group">
                <label>Email* </label>
                <input type="email" class="form-control" name="email" value="@Model.Member.Email" required />
            </div>
            <div class="form-group">
                <label>Password* </label>
                <input type="password" class="form-control" name="pass" value="@Model.Member.Password" required />
            </div>
            <div class="form-group">
                <label>Phone* </label>
                <input type="number" class="form-control" name="phone" value="@Model.Member.PhoneNumber" />
            </div>
            <div class="form-group">
                <label>Role </label>
                @if (Model.Member.Role.Value == true)
                {
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="role" id="member" value="Member">
                        <label class="form-check-label" for="member">
                            Member
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="role" id="admin" value="Admin" checked>
                        <label class="form-check-label" for="admin">
                            Admin
                        </label>
                    </div>
                }
                else
                {
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="role" id="member" value="Member" checked>
                        <label class="form-check-label" for="member">
                            Member
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="role" id="admin" value="Admin">
                        <label class="form-check-label" for="admin">
                            Admin
                        </label>
                    </div>
                }
            </div>
            <div class="form-group">
                <label>Date Of Birth </label>
                <input type="date" class="form-control" name="dob" value=@Model.Member.Dob?.ToString("yyyy-MM-dd") />
            </div>
            <div class="form-group">
                <label>Address </label>
                <input type="text" class="form-control" name="address" value="@Model.Member.Address" />
            </div>
            <div class="form-group">
                <label>City </label>
                <input type="text" class="form-control" name="city" value="@Model.Member.City" />
            </div>
            <div class="form-group">
                <label>Country </label>
                <input type="text" class="form-control" name="country" value="@Model.Member.Country" />
            </div>
            <div class="form-group">
                <label>Point </label>
                <input type="number" class="form-control" name="point" value="@Model.Member.Point" />
            </div>
            <div class="form-group">
                <label for="rank">Example multiple select</label>
                <select class="form-control" name="rank" id="rank">
                    @foreach (var r in Model.Rank)
                    {
                        <option value="@r.RankId">@r.Rank1</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label>Avatar </label>
                <input type="file" class="form-control" name="ava" />
            </div>
            <input type="submit" />
        </form>
    </div>
    <script>
        document.querySelector("#rank").value = '@Model.Member.RankId'
    </script>
</body>
</html>